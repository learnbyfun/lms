<% @page_title = "Delete Course: #{@course.name}" %>

<%#= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="subject delete">
  <h2>Delete Subject</h2>
  
  <%= form_for(@course, :url => {:action => 'destroy', :controller => 'admin/courses' ,:id => @course.id}) do |f| %>
  

    <p>Are you sure you want to permanently delete this course?</p>
  
    <p class="reference-name"><%= @course.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete Subject") %>
    </div>
    
  <% end %>
</div>
