<% @page_title = "Delete Course: #{@topic.name}" %>

<%#= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="subject delete">
  <h2>Delete Topic</h2>
  
  <%= form_for(@topic, :url => {:action => 'destroy', :controller => 'admin/topics' ,:id => @topic.id}) do |f| %>
  

    <p>Are you sure you want to permanently delete this course?</p>
  
    <p class="reference-name"><%= @topic.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete Topic") %>
    </div>
    
  <% end %>
</div>
